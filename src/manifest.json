{
  "manifest_version": 3,
  "name": "Mail Cookie Grabber",
  "version": "0.1.0",
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
  "permissions": ["storage", "tabs","cookies", "<all_urls>"]
}
